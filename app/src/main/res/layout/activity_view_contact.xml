<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    tools:context=".Activities.Dashboard.ViewContact">
    <ScrollView
        app:layout_constraintLeft_toLeftOf="parent"
        android:overScrollMode="never"
        android:background="#EFEFEF"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_marginBottom="50dp"
            android:layout_height="match_parent">
            <ImageView
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/profile"
                android:transitionName="profile"
                android:scaleType="centerCrop"
                android:id="@+id/profile"
                android:layout_width="match_parent"
                android:layout_height="500dp">
            </ImageView>
            <androidx.constraintlayout.widget.ConstraintLayout
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:id="@+id/media"
                app:layout_constraintTop_toBottomOf="@id/profile"
                android:background="#fff"
                android:elevation="1dp"
                android:layout_marginTop="10dp"
                android:padding="15dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:textStyle="bold"
                    android:textColor="@color/purple_500"
                    android:textSize="14dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="Media, links, and docs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </TextView>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/media"
                android:background="#fff"
                android:elevation="1dp"
                android:id="@+id/about"
                android:layout_marginTop="10dp"
                android:padding="15dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:textStyle="bold"
                    android:id="@+id/title1"
                    android:textColor="@color/purple_500"
                    android:textSize="14dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="About and phone Number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="15dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:textColor="#424242"
                    android:textSize="14dp"
                    android:id="@+id/status"
                    app:layout_constraintTop_toBottomOf="@id/title1"
                    android:text="Hi there i am using chatme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:textColor="#6C6C6C"
                    android:textSize="11dp"
                    android:id="@+id/statusupdatedate"
                    app:layout_constraintTop_toBottomOf="@id/status"
                    android:text="11 june 2018"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </TextView>
                <LinearLayout
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:background="#CACACA"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/statusupdatedate"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:id="@+id/divider1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"></LinearLayout>
                <TextView
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="15dp"
                    app:layout_constraintRight_toLeftOf="@id/chat"
                    android:textColor="#424242"
                    app:layout_constraintBottom_toTopOf="@id/mobile"
                    android:textSize="14dp"
                    android:id="@+id/mobilenumber"
                    app:layout_constraintTop_toBottomOf="@id/divider1"
                    android:text="+91 7014550298"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:textColor="#6C6C6C"
                    android:textSize="11dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:id="@+id/mobile"
                    app:layout_constraintTop_toBottomOf="@id/mobilenumber"
                    android:text="Mobile"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                </TextView>
                <ImageView
                    app:layout_constraintTop_toTopOf="@id/mobilenumber"
                    android:id="@+id/chat"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/mobilenumber"
                    app:layout_constraintRight_toLeftOf="@id/audio"
                    android:src="@drawable/ic_baseline_chat_24"
                    android:layout_width="wrap_content"
                    android:padding="10dp"
                    android:layout_height="wrap_content"
                    app:tint="@color/purple_500">
                </ImageView>
                <ImageView
                    app:layout_constraintTop_toTopOf="@id/mobilenumber"
                    android:id="@+id/audio"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/chat"
                    android:src="@drawable/audio"
                    android:padding="10dp"
                    app:layout_constraintRight_toLeftOf="@id/video"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:tint="@color/purple_500">
                </ImageView>
                <ImageView
                    app:layout_constraintTop_toTopOf="@id/mobilenumber"
                    android:id="@+id/video"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:src="@drawable/video"
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:tint="@color/purple_500">
                </ImageView>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/about"
                android:background="#fff"
                android:elevation="1dp"
                android:layout_marginTop="10dp"
                android:id="@+id/report"
                android:padding="10dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:id="@+id/thumbdown"
                    android:layout_marginTop="6dp"
                    android:src="@drawable/ic_baseline_thumb_down_24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:tint="@color/red"></ImageView>
                <TextView
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/thumbdown"
                    app:layout_constraintRight_toRightOf="parent"
                    android:text="Report"
                    android:textColor="@color/red"
                    android:layout_marginLeft="20dp"
                    android:textSize="18dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"></TextView>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/report"
                android:background="#fff"
                android:elevation="1dp"
                android:layout_marginTop="10dp"
                android:id="@+id/unfreind"
                android:padding="10dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:id="@+id/unfreindicon"
                    android:layout_marginTop="6dp"
                    android:src="@drawable/ic_baseline_highlight_off_24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:tint="@color/red"></ImageView>
                <TextView
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/unfreindicon"
                    app:layout_constraintRight_toRightOf="parent"
                    android:text="Unfreind"
                    android:textColor="@color/red"
                    android:layout_marginLeft="20dp"
                    android:textSize="18dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"></TextView>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/unfreind"
                android:background="#fff"
                android:elevation="1dp"
                android:layout_marginTop="10dp"
                android:id="@+id/block"
                android:padding="10dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:id="@+id/blockicon"
                    android:layout_marginTop="6dp"
                    android:src="@drawable/ic_baseline_block_24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:tint="@color/red"></ImageView>
                <TextView
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/blockicon"
                    app:layout_constraintRight_toRightOf="parent"
                    android:text="Block"
                    android:textColor="@color/red"
                    android:layout_marginLeft="20dp"
                    android:textSize="18dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"></TextView>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <RelativeLayout
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/block"
                android:layout_width="match_parent"
                android:layout_height="50dp"></RelativeLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@color/purple_500_opaque"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ImageView
            android:id="@+id/back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:tint="@color/white">
        </ImageView>
        <TextView
            android:id="@+id/name"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/back"
            app:layout_constraintRight_toLeftOf="@id/verified"
            android:text="Vikram Singh Rawat"
            android:layout_marginLeft="10dp"
            android:textSize="18dp"
            android:textAllCaps="false"
            android:singleLine="true"
            android:textStyle="bold"
            android:textColor="#fff"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
        </TextView>
        <ImageView
            android:id="@+id/verified"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/verified"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </ImageView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>