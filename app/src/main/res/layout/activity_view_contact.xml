<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    tools:context=".Activities.Dashboard.ViewContact">
    <ScrollView
        app:layout_constraintLeft_toLeftOf="parent"
        android:overScrollMode="never"
        android:background="#EFEFEF"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_marginBottom="50dp"
            android:layout_height="match_parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                app:layout_constraintLeft_toLeftOf="parent"
                android:background="@color/purple_500"
                android:paddingBottom="10dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="0dp"
                android:id="@+id/biosection"
                android:layout_height="wrap_content">
                <TextView
                    android:singleLine="true"
                    android:layout_marginLeft="10dp"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:id="@+id/name"
                    android:textColor="#FFFFFF"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="@id/profile"
                    app:layout_constraintRight_toLeftOf="@id/verified"
                    android:text="Vikram Singh Rawat"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                </TextView>
                <ImageView
                    app:layout_constraintLeft_toRightOf="@id/name"
                    app:layout_constraintTop_toTopOf="@id/name"
                    android:id="@+id/verified"
                    app:layout_constraintRight_toLeftOf="@id/profile"
                    app:layout_constraintBottom_toBottomOf="@id/name"
                    android:src="@drawable/verified"
                    android:layout_width="20dp"
                    android:layout_height="20dp">
                </ImageView>
                <TextView
                    android:singleLine="true"
                    android:textSize="14dp"
                    android:id="@+id/username"
                    android:textColor="#FFFFFF"
                    app:layout_constraintBottom_toTopOf="@id/number"
                    app:layout_constraintLeft_toLeftOf="@id/name"
                    app:layout_constraintTop_toBottomOf="@id/name"
                    app:layout_constraintRight_toLeftOf="@id/profile"
                    android:text=""
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:singleLine="true"
                    android:textSize="14dp"
                    android:id="@+id/number"
                    android:drawableLeft="@drawable/ic_baseline_local_phone_24"
                    android:textColor="#FFFFFF"
                    android:drawableTint="#FFFFFF"
                    android:drawablePadding="10dp"
                    app:layout_constraintBottom_toTopOf="@id/dob"
                    app:layout_constraintLeft_toLeftOf="@id/name"
                    app:layout_constraintTop_toBottomOf="@id/username"
                    app:layout_constraintRight_toLeftOf="@id/profile"
                    android:text="7014550298"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                </TextView>

                <TextView
                    android:singleLine="true"
                    android:textSize="14dp"
                    android:id="@+id/dob"
                    android:textColor="#FFFFFF"
                    android:drawableTint="#FFFFFF"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@drawable/dob"
                    app:layout_constraintLeft_toLeftOf="@id/name"
                    app:layout_constraintTop_toBottomOf="@id/number"
                    app:layout_constraintRight_toLeftOf="@id/profile"
                    app:layout_constraintBottom_toTopOf="@id/biotitle"
                    android:text="05 March 1998"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                </TextView>
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:src="@drawable/profile"
                    android:transitionName="profile"
                    android:scaleType="centerCrop"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:id="@+id/profile"
                    android:layout_width="100dp"
                    android:layout_height="100dp">
                </de.hdodenhof.circleimageview.CircleImageView>
                <TextView
                    android:singleLine="true"
                    android:layout_marginLeft="10dp"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:id="@+id/biotitle"
                    android:textColor="#FFFFFF"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/profile"
                    app:layout_constraintRight_toLeftOf="@id/verified"
                    android:text="Bio : "
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:id="@+id/bio"
                    android:hint="@string/no_bio_setup"
                    android:autoLink="all"
                    android:textColorHint="#94E3E3E3"
                    android:textColor="#E1E1E1"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="15dp"
                    app:layout_constraintLeft_toLeftOf="@id/biotitle"
                    app:layout_constraintTop_toBottomOf="@id/biotitle"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </TextView>
                <Button
                    app:layout_constraintLeft_toLeftOf="@id/bio"
                    app:layout_constraintRight_toRightOf="@id/bio"
                    app:layout_constraintTop_toBottomOf="@id/bio"
                    android:id="@+id/editprofile"
                    android:text="Edit Profile"
                    android:visibility="gone"
                    android:backgroundTint="#fff"
                    android:textColor="#000"
                    android:textAllCaps="false"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                </Button>
                <androidx.constraintlayout.widget.ConstraintLayout
                    app:layout_constraintLeft_toLeftOf="@id/bio"
                    app:layout_constraintRight_toRightOf="@id/bio"
                    app:layout_constraintTop_toBottomOf="@id/bio"
                    android:layout_width="match_parent"
                    android:id="@+id/defaultView"
                    android:padding="5dp"
                    android:layout_height="wrap_content">
                    <Button
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/unfreind"
                        android:id="@+id/block"
                        android:text="Block"
                        android:backgroundTint="#fff"
                        android:layout_margin="5dp"
                        android:textColor="#000"
                        android:textAllCaps="false"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                    </Button>
                    <Button
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:id="@+id/unfreind"
                        android:text="Unfreind"
                        android:layout_margin="5dp"
                        app:layout_constraintLeft_toRightOf="@id/block"
                        android:backgroundTint="#fff"
                        android:textColor="#000"
                        android:textAllCaps="false"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                    </Button>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:id="@+id/media"
                app:layout_constraintTop_toBottomOf="@id/biosection"
                android:background="#fff"
                android:elevation="1dp"
                android:layout_marginTop="10dp"
                android:padding="15dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:textStyle="bold"
                    android:textColor="@color/purple_500"
                    android:textSize="14dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="Media, links, and docs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </TextView>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/media"
                android:background="#fff"
                android:elevation="1dp"
                android:id="@+id/about"
                android:layout_marginTop="10dp"
                android:padding="15dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:textStyle="bold"
                    android:id="@+id/title1"
                    android:textColor="@color/purple_500"
                    android:textSize="14dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="About and phone Number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="15dp"
                    app:layout_constraintRight_toLeftOf="@id/editstatus"
                    android:textColor="#424242"
                    android:textSize="14dp"
                    android:id="@+id/status"
                    app:layout_constraintTop_toBottomOf="@id/title1"
                    android:text="Hi there i am using chatme"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="@id/status"
                    android:textColor="#6C6C6C"
                    android:textSize="11dp"
                    android:id="@+id/statusupdatedate"
                    app:layout_constraintTop_toBottomOf="@id/status"
                    android:text="11 june 2018"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                </TextView>
                <ImageView
                    app:layout_constraintTop_toTopOf="@id/status"
                    android:id="@+id/editstatus"
                    app:layout_constraintBottom_toBottomOf="@id/statusupdatedate"
                    app:layout_constraintLeft_toRightOf="@id/status"
                    app:layout_constraintRight_toRightOf="parent"
                    android:src="@drawable/ic_baseline_edit_24"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:padding="10dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_height="wrap_content"
                    app:tint="@color/purple_500">
                </ImageView>
                <LinearLayout
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:background="#CACACA"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/statusupdatedate"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:id="@+id/divider1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"></LinearLayout>
                <TextView
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="15dp"
                    app:layout_constraintRight_toLeftOf="@id/chat"
                    android:textColor="#424242"
                    app:layout_constraintBottom_toTopOf="@id/mobile"
                    android:textSize="14dp"
                    android:id="@+id/mobilenumber"
                    app:layout_constraintTop_toBottomOf="@id/divider1"
                    android:text="+91 7014550298"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:textColor="#6C6C6C"
                    android:textSize="11dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:id="@+id/mobile"
                    app:layout_constraintTop_toBottomOf="@id/mobilenumber"
                    android:text="Mobile"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                </TextView>
                <ImageView
                    app:layout_constraintTop_toTopOf="@id/mobilenumber"
                    android:id="@+id/chat"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/mobilenumber"
                    app:layout_constraintRight_toLeftOf="@id/audio"
                    android:src="@drawable/ic_baseline_chat_24"
                    android:layout_width="wrap_content"
                    android:padding="10dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_height="wrap_content"
                    app:tint="@color/purple_500">
                </ImageView>
                <ImageView
                    app:layout_constraintTop_toTopOf="@id/mobilenumber"
                    android:id="@+id/audio"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/chat"
                    android:src="@drawable/audio"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:padding="10dp"
                    app:layout_constraintRight_toLeftOf="@id/video"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:tint="@color/purple_500">
                </ImageView>
                <ImageView
                    app:layout_constraintTop_toTopOf="@id/mobilenumber"
                    android:id="@+id/video"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:src="@drawable/video"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:tint="@color/purple_500">
                </ImageView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>