<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <Button
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/divider"
        android:id="@+id/searchnewfreind"
        android:text="Search Freinds"
        android:textAllCaps="false"
        android:layout_width="0dp"
        android:layout_margin="5dp"
        android:layout_height="wrap_content">
    </Button>
    <Button
        app:layout_constraintLeft_toRightOf="@id/searchnewfreind"
        app:layout_constraintTop_toTopOf="@id/searchnewfreind"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/searchnewfreind"
        android:id="@+id/seeallfreinds"
        android:text="Freind List"
        android:textAllCaps="false"
        android:layout_margin="15dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
    </Button>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:id="@+id/divider"
        android:background="#C5C5C5"
        app:layout_constraintTop_toBottomOf="@id/searchnewfreind"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/title2"
        android:layout_width="match_parent"
        android:layout_height="1dp">
    </LinearLayout>
    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/title2"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Freinds Request"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="#000"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
    </TextView>
    <TextView
        android:id="@+id/requestcount"
        app:layout_constraintTop_toTopOf="@id/title2"
        app:layout_constraintLeft_toRightOf="@id/title2"
        android:text="1"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="#FF0000"
        android:layout_width="0dp"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content">
    </TextView>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/notfound"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/title2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/freinds"
                android:layout_width="60dp"
                android:layout_gravity="center"
                android:layout_height="60dp"
                app:tint="@color/purple_500">
            </ImageView>
            <TextView
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:text="You have no Freind Requests to show.\nSearch you freinds, Add in your Freind list and Start chat"
                android:textSize="14dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:id="@+id/requestlist"
        android:overScrollMode="never"
        app:layout_constraintTop_toBottomOf="@id/title2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="0dp">
    </androidx.recyclerview.widget.RecyclerView>
</androidx.constraintlayout.widget.ConstraintLayout>