<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#ffffff"
    android:padding="5dp"
    android:keepScreenOn="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Dashboard.UpdateProfile">
    <ImageView
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/close"
        app:layout_constraintBottom_toTopOf="@id/scroller"
        android:padding="5dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackground"
        android:src="@drawable/ic_baseline_close_24"
        android:layout_width="40dp"
        android:layout_height="40dp">
    </ImageView>
    <ImageView
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/close"
        android:id="@+id/done"
        android:padding="5dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackground"
        android:src="@drawable/ic_baseline_done_24"
        android:layout_width="40dp"
        android:layout_height="40dp">
    </ImageView>
    <ScrollView
        android:id="@+id/scroller"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@id/close"
        app:layout_constraintLeft_toLeftOf="parent"
        android:scrollbars="none"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="20dp"
                android:src="@drawable/profile"
                android:id="@+id/profilepic"
                android:layout_width="150dp"
                android:layout_height="150dp">
            </de.hdodenhof.circleimageview.CircleImageView>
            <Button
                android:id="@+id/changepic"
                android:textAllCaps="false"
                app:layout_constraintLeft_toLeftOf="@id/profilepic"
                app:layout_constraintRight_toRightOf="@id/profilepic"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/profilepic"
                android:text="Change Profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </Button>
            <TextView
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="20dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/changepic"
                android:id="@+id/nametext"
                android:textColor="@color/purple_500"
                android:textStyle="bold"
                android:textSize="16dp"
                android:text="Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>
            <EditText
                android:layout_marginTop="5dp"
                android:id="@+id/name"
                android:singleLine="true"
                android:textCursorDrawable="@null"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/nametext"
                android:background="@drawable/inputbox1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </EditText>
            <TextView
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="10dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/name"
                android:id="@+id/usernametext"
                android:textColor="@color/purple_500"
                android:textStyle="bold"
                android:textSize="16dp"
                android:text="Username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>
            <EditText
                android:layout_marginTop="5dp"
                android:id="@+id/username"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/usernametext"
                android:textCursorDrawable="@null"
                android:singleLine="true"
                android:background="@drawable/inputbox1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </EditText>
            <TextView
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="10dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/username"
                android:id="@+id/dobtext"
                android:textColor="@color/purple_500"
                android:textStyle="bold"
                android:textSize="16dp"
                android:text="Date of birth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>
            <DatePicker
                android:layout_marginTop="5dp"
                android:id="@+id/dob"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/dobtext"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:calendarViewShown="false"
                android:datePickerMode="spinner"
                android:spinnersShown="true">
            </DatePicker>
            <TextView
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="10dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/dob"
                android:id="@+id/biotext"
                android:textColor="@color/purple_500"
                android:textStyle="bold"
                android:textSize="16dp"
                android:text="About yourself"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>
            <EditText
                android:layout_marginTop="5dp"
                android:id="@+id/bio"
                android:minLines="3"
                android:hint="Add your bio so other can know more about you."
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/biotext"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textCursorDrawable="@null"
                android:background="@drawable/inputbox1"
                android:layout_marginBottom="100dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </EditText>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>