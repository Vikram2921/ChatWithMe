<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/purple_500"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    tools:context=".Activities.Login">
    <ScrollView
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        app:layout_constraintBottom_toTopOf="@id/buttonLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@mipmap/ic_launcher_round"
                android:layout_marginTop="20dp"
                android:id="@+id/icon"
                app:layout_constraintWidth_percent="0.4"
                app:layout_constraintHeight_percent="0.4"
                android:layout_width="0dp"
                android:layout_height="0dp">
            </ImageView>
            <TextView
                app:layout_constraintTop_toBottomOf="@id/icon"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:text="Chat With Me"
                android:textSize="25dp"
                android:id="@+id/appname"
                android:textStyle="bold"
                android:textColor="#fff"
                android:padding="2dp"
                android:gravity="center_horizontal"
                android:layout_marginLeft="5dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                app:layout_constraintTop_toBottomOf="@id/appname"
                android:paddingTop="30dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:textStyle="bold"
                android:textColor="#fff"
                android:id="@+id/counterytext"
                android:textAlignment="center"
                android:textSize="14dp"
                android:text="Select Your Country"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
            </TextView>
            <Spinner
                app:layout_constraintTop_toBottomOf="@id/counterytext"
                app:layout_constraintLeft_toLeftOf="parent"
                android:background="@drawable/inputbox1"
                android:layout_marginTop="15dp"
                android:padding="15dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/numbertext"
                android:id="@+id/countryList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </Spinner>
            <TextView
                app:layout_constraintTop_toBottomOf="@id/countryList"
                android:paddingTop="30dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:textStyle="bold"
                android:textColor="#fff"
                android:id="@+id/numbertext"
                android:textAlignment="center"
                android:textSize="14dp"
                android:text="Enter your Mobile Number"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

            </TextView>
            <EditText
                android:singleLine="true"
                android:id="@+id/number"
                android:inputType="number"
                android:textSize="16dp"
                android:hint="Mobile Number"
                android:textColorHint="#B3B3B3"
                android:drawableRight="@drawable/phone"
                android:textColor="#000000"
                android:background="@drawable/inputbox1"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@id/numbertext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </EditText>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/buttonLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="10dp"
        android:background="@color/purple_500"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/continuelogin"
            android:text="Continue"
            android:padding="15dp"
            android:textColor="#000"
            android:backgroundTint="#FFFFFF"
            android:textAllCaps="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </Button>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>