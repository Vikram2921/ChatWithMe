<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#36C8C8C8"
    android:keepScreenOn="true"
    tools:context=".Activities.ChatRoom">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/toppane"
        android:background="@color/purple_500"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="70dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/profile"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="40dp"
            android:layout_height="40dp">
        </de.hdodenhof.circleimageview.CircleImageView>
        <LinearLayout
            app:layout_constraintLeft_toRightOf="@id/profile"
            android:layout_centerVertical="true"
            app:layout_constraintTop_toTopOf="@id/profile"
            app:layout_constraintBottom_toBottomOf="@id/profile"
            android:orientation="vertical"
            app:layout_constraintRight_toLeftOf="@id/verified"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:singleLine="true"
                android:textColor="#fff"
                android:textStyle="bold"
                android:id="@+id/name"
                android:layout_marginLeft="10dp"
                android:textSize="16dp"
                android:text="Vikram Singh Rawat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:singleLine="true"
                android:textColor="#fff"
                android:id="@+id/status"
                android:layout_marginLeft="10dp"
                android:textSize="12dp"
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>
        <ImageView
            android:id="@+id/verified"
            android:src="@drawable/verified"
            android:layout_centerVertical="true"
            android:visibility="gone"
            app:layout_constraintRight_toLeftOf="@id/audiocall"
            app:layout_constraintTop_toTopOf="@id/profile"
            app:layout_constraintBottom_toBottomOf="@id/profile"
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </ImageView>
        <ImageView
            android:id="@+id/audiocall"
            android:src="@drawable/audio"
            android:layout_centerVertical="true"
            app:layout_constraintRight_toLeftOf="@id/videocall"
            app:layout_constraintTop_toTopOf="@id/profile"
            app:layout_constraintBottom_toBottomOf="@id/profile"
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </ImageView>
        <ImageView
            android:id="@+id/videocall"
            android:src="@drawable/video"
            app:layout_constraintRight_toLeftOf="@id/more"
            app:layout_constraintTop_toTopOf="@id/profile"
            app:layout_constraintBottom_toBottomOf="@id/profile"
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </ImageView>
        <ImageView
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/profile"
            app:layout_constraintBottom_toBottomOf="@id/profile"
            android:id="@+id/more"
            android:src="@drawable/more_menu"
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </ImageView>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.NobodyKnows.chatlayoutview.ChatLayoutView
        android:id="@+id/chatlayoutview"
        app:layout_constraintTop_toBottomOf="@id/toppane"
        app:layout_constraintBottom_toTopOf="@id/bottompane"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="0dp">
    </com.NobodyKnows.chatlayoutview.ChatLayoutView>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottompane"
        android:background="@drawable/messageinput"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/emoji"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:rotation="0"
            app:layout_constraintTop_toTopOf="@id/send"
            app:layout_constraintRight_toLeftOf="@id/mb"
            android:src="@drawable/ic_baseline_emoji_emotions_24"
            app:layout_constraintBottom_toBottomOf="@id/send"
            app:layout_constraintLeft_toLeftOf="parent"></ImageView>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/mb"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/send"
            app:layout_constraintRight_toLeftOf="@id/send"
            app:layout_constraintLeft_toRightOf="@id/emoji"
            android:elevation="4dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <EditText
                app:layout_constraintLeft_toLeftOf="parent"
                android:textColor="#000"
                android:background="@null"
                android:textColorHint="#CBFFFFFF"
                android:maxLines="3"
                android:hint="Type your message"
                android:focusable="true"
                android:padding="10dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="0dp"
                android:id="@+id/messagebox"
                android:layout_height="match_parent">
            </EditText>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sendbackground"
            android:src="@drawable/ic_baseline_send_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/mb"
            app:layout_constraintRight_toRightOf="parent"></ImageView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>