<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#36C8C8C8"
    android:keepScreenOn="true"
    tools:context=".Activities.ChatRoom">
    <ImageView
        android:id="@+id/background"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ImageView>

    <com.NobodyKnows.chatlayoutview.ChatLayoutView
        android:id="@+id/chatlayoutview"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottompane"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="0dp">
    </com.NobodyKnows.chatlayoutview.ChatLayoutView>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottompane"
        android:background="@drawable/messageinput"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/emoji"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:rotation="0"
            app:layout_constraintTop_toTopOf="@id/send"
            app:layout_constraintRight_toLeftOf="@id/mb"
            android:src="@drawable/ic_baseline_emoji_emotions_24"
            app:layout_constraintBottom_toBottomOf="@id/send"
            app:layout_constraintLeft_toLeftOf="parent"></ImageView>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/mb"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/send"
            app:layout_constraintRight_toLeftOf="@id/send"
            app:layout_constraintLeft_toRightOf="@id/emoji"
            android:elevation="4dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <EditText
                app:layout_constraintLeft_toLeftOf="parent"
                android:textColor="#FFFFFF"
                android:background="@null"
                android:textColorHint="#CBFFFFFF"
                android:maxLines="3"
                android:hint="Type your messageDB"
                android:focusable="true"
                android:padding="10dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="0dp"
                android:id="@+id/messagebox"
                android:layout_height="match_parent">
            </EditText>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sendbackground"
            android:src="@drawable/ic_baseline_send_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/mb"
            app:layout_constraintRight_toRightOf="parent"></ImageView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>