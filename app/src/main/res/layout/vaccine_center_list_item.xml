<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/centername"
        android:text="UPHC Shreenagar Road Site 1"
        android:textColor="#000"
        android:textStyle="bold"
        app:layout_constraintRight_toLeftOf="@id/feetype"
        android:textSize="20dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
    </TextView>
    <TextView
        app:layout_constraintTop_toTopOf="@id/centername"
        app:layout_constraintBottom_toBottomOf="@id/timming"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/feetype"
        android:text="Free"
        android:padding="10dp"
        android:background="@drawable/paid"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="14dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>
    <TextView
        app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintTop_toBottomOf="@id/centername"
        android:id="@+id/timming"
        android:text="Timmings : 09:00:00 - 18:00:00"
        android:textColor="#000"
        app:layout_constraintRight_toLeftOf="@id/feetype"
        android:textSize="16dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
    </TextView>
    <TextView
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="20dp"
        android:textStyle="bold"
        android:background="@drawable/available"
        android:id="@+id/total"
        android:textColor="@color/white"
        android:padding="5dp"
        android:textAlignment="center"
        android:paddingLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/timming"
        android:text="Total Available : 0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </TextView>
    <LinearLayout
        android:id="@+id/slots"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/total"
        app:layout_constraintBottom_toTopOf="@id/end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </LinearLayout>
    <LinearLayout
        android:background="#DADADA"
        android:orientation="vertical"
        android:id="@+id/end"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/slots"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="1dp">
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>