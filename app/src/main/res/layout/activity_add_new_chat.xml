<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:keepScreenOn="true"
    android:layout_height="match_parent"
    tools:context=".Activities.Dashboard.AddNewChat">
    <Button
        android:id="@+id/searchFreind"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="5dp"
        android:textAllCaps="false"
        android:singleLine="true"
        android:text="Search new Freinds"
        app:layout_constraintEnd_toStartOf="@id/synccontact"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
    </Button>
    <Button
        android:text="Sync With Contacts"
        android:textAllCaps="false"
        android:singleLine="true"
        app:layout_constraintStart_toEndOf="@id/searchFreind"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/synccontact"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="0dp"
        android:layout_margin="5dp"
        android:layout_height="wrap_content"></Button>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:id="@+id/divider"
        android:layout_marginLeft="10dp"
        android:background="#C5C5C5"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toBottomOf="@id/searchFreind"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/contactList"
        android:layout_width="match_parent"
        android:layout_height="1dp">
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:overScrollMode="never"
        android:id="@+id/contactList"
        android:layout_margin="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp">
    </androidx.recyclerview.widget.RecyclerView>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/notfound"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/freinds"
                android:layout_width="60dp"
                android:layout_gravity="center"
                android:layout_height="60dp"
                app:tint="@color/purple_500">
            </ImageView>
            <TextView
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:text="You have no freinds to show here.\nSearch your freinds by name or Sync with you contacts."
                android:textSize="14dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>