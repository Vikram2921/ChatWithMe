<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:elevation="2dp"
    android:layout_marginBottom="3dp"
    android:layout_marginRight="5dp"
    android:animateLayoutChanges="true"
    android:paddingLeft="25dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:id="@+id/box"
        android:padding="8dp"
        android:background="@drawable/right_message_background"
        android:layout_height="wrap_content">
        <include
            android:id="@+id/linkview"
            app:layout_constraintBottom_toTopOf="@id/messagetext"
            layout="@layout/link_view">
        </include>
        <TextView
            android:id="@+id/messagetext"
            android:layout_width="wrap_content"
            android:textColorLink="#3F51B5"
            android:layout_height="wrap_content"
            android:text="Hello s dsfdsfdsd fsdf sd f sf sdf sdfsd f dsf s df sd fds  sdf sd fs df"
            android:textColor="#000000"
            android:textSize="@dimen/chatmessagetextsize"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/linkview"></TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/box"
        android:text="Sent"
        android:visibility="gone"
        android:id="@+id/status"
        android:textColor="#ECECEC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>
</androidx.constraintlayout.widget.ConstraintLayout>