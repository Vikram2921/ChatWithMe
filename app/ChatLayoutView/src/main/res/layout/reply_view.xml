<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:background="@drawable/round"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:text="Vikram Singh Rawat"
        android:textStyle="bold"
        android:textSize="12dp"
        android:textColor="#000"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/messagetimereply"
        app:layout_constraintBottom_toTopOf="@id/messageReply"
        android:id="@+id/sendernamereply"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
    </TextView>
    <TextView
        app:layout_constraintRight_toLeftOf="@id/previewreply"
        app:layout_constraintTop_toTopOf="@id/sendernamereply"
        android:text="12:34 PM, Today"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@id/sendernamereply"
        app:layout_constraintLeft_toRightOf="@id/sendernamereply"
        android:id="@+id/messagetimereply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>
    <TextView
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/previewreply"
        android:layout_marginTop="4dp"
        android:textAlignment="viewStart"
        android:maxLines="2"
        android:textColor="#5A5A5A"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sendernamereply"
        android:text="Hi this is an reply message's original message text code if you want to get original message click on me i will redirect you to that message"
        android:id="@+id/messageReply"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
    </TextView>
    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"
        app:layout_constraintLeft_toRightOf="@id/messagetimereply"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/previewreply"
        android:scaleType="centerCrop"
        android:layout_marginLeft="10dp"
        android:src="@drawable/profile"
        android:layout_width="40dp"
        android:layout_height="40dp">
    </ImageView>
</androidx.constraintlayout.widget.ConstraintLayout>