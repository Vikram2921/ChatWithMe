<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:elevation="2dp"
    android:layout_marginLeft="25dp"
    android:layout_marginBottom="3dp"
    android:layout_marginRight="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="0dp"
        android:id="@+id/box"
        app:layout_constraintLeft_toLeftOf="parent"
        android:padding="15dp"
        android:background="@drawable/right_message_background"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="40dp"
            android:id="@+id/profile"
            android:src="@drawable/profile"
            android:layout_height="40dp">
        </de.hdodenhof.circleimageview.CircleImageView>
        <TextView
            android:id="@+id/name"
            android:text="Vikram Singh Rawat"
            android:textStyle="bold"
            android:textColor="#000"
            app:layout_constraintBottom_toTopOf="@id/contactnumber"
            app:layout_constraintLeft_toRightOf="@id/profile"
            app:layout_constraintTop_toTopOf="@id/profile"
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:id="@+id/contactnumber"
            android:text="7014550298"
            android:drawableTint="#6e6e6e"
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/ic_baseline_local_phone_24"
            android:textColor="#6E6E6E"
            android:textSize="12dp"
            app:layout_constraintLeft_toRightOf="@id/profile"
            app:layout_constraintTop_toBottomOf="@id/name"
            android:layout_marginLeft="10dp"
            app:layout_constraintBottom_toBottomOf="@id/profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
        </TextView>
        <ImageView
            app:layout_constraintLeft_toRightOf="@id/name"
            app:layout_constraintTop_toTopOf="@id/name"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground"
            app:layout_constraintBottom_toBottomOf="@id/contactnumber"
            android:id="@+id/chat"
            android:layout_marginLeft="15dp"
            android:src="@drawable/ic_baseline_chat_24"
            android:layout_marginRight="15dp"
            android:tint="@color/purple_500"
            app:layout_constraintEnd_toStartOf="@id/addcontact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </ImageView>
        <ImageView
            app:layout_constraintLeft_toRightOf="@id/chat"
            app:layout_constraintTop_toTopOf="@id/name"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/contactnumber"
            android:id="@+id/addcontact"
            android:layout_marginLeft="15dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_baseline_person_add_24"
            android:tint="@color/purple_500"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </ImageView>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/box"
        android:text="Sent"
        android:visibility="gone"
        android:id="@+id/status"
        android:textColor="#ECECEC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>
</androidx.constraintlayout.widget.ConstraintLayout>