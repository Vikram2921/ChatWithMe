<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <de.hdodenhof.circleimageview.CircleImageView
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="@dimen/messagepadding"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="@dimen/messagepadding"
       app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="40dp"
        android:id="@+id/profile"
        android:src="@drawable/profile"
        android:layout_height="40dp">
    </de.hdodenhof.circleimageview.CircleImageView>
    <TextView
        android:id="@+id/name"
        android:text="Vikram Singh Rawat"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@id/contactnumber"
        app:layout_constraintLeft_toRightOf="@id/profile"
        app:layout_constraintTop_toTopOf="@id/profile"
        android:layout_marginLeft="10dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
    </TextView>
    <TextView
        android:id="@+id/contactnumber"
        android:text="7014550298"
        android:textColor="#6A6A6A"
        android:textSize="12dp"
        android:drawableTint="#6A6A6A"
        android:drawablePadding="5dp"

        android:drawableLeft="@drawable/ic_baseline_local_phone_24"
        app:layout_constraintLeft_toRightOf="@id/profile"
        app:layout_constraintTop_toBottomOf="@id/name"
        android:layout_marginLeft="10dp"
        app:layout_constraintBottom_toBottomOf="@id/profile"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
    </TextView>
    <ImageView
        app:layout_constraintLeft_toRightOf="@id/name"
        app:layout_constraintTop_toTopOf="@id/name"
        app:layout_constraintBottom_toBottomOf="@id/contactnumber"
        android:id="@+id/chat"
        android:layout_marginLeft="15dp"
        android:src="@drawable/ic_baseline_chat_24"
        android:layout_marginRight="15dp"
        android:tint="#6A6A6A"
        app:layout_constraintEnd_toStartOf="@id/addcontact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </ImageView>
    <ImageView
        app:layout_constraintLeft_toRightOf="@id/chat"
        app:layout_constraintTop_toTopOf="@id/name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/contactnumber"
        android:id="@+id/addcontact"
        android:layout_marginLeft="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="@dimen/messagepadding"
        android:tint="#6A6A6A"
        android:src="@drawable/ic_baseline_person_add_24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </ImageView>
</androidx.constraintlayout.widget.ConstraintLayout>