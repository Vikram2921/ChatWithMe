<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:id="@+id/button"
    android:clickable="true"
    android:animateLayoutChanges="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/round_shape_view"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:padding="10dp"
        android:elevation="5dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/icon"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/download"
            android:visibility="visible"
            android:layout_width="30dp"
            android:layout_height="30dp">
        </ImageView>
        <com.mikhaellopez.circularprogressbar.CircularProgressBar
            android:id="@+id/progressbar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:visibility="gone"
            app:cpb_progress="0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:cpb_indeterminate_mode="false"
            app:cpb_progress_max="100"
            app:cpb_background_progressbar_color="#C5C5C5"
            app:cpb_background_progressbar_width="1dp"
            app:cpb_progress_direction="to_right"
            app:cpb_progressbar_color="#4CAF50"
            app:cpb_progressbar_width="2dp"
            app:cpb_round_border="false" />
        <ImageView
            app:layout_constraintLeft_toLeftOf="@id/progressbar"
            app:layout_constraintTop_toTopOf="@id/progressbar"
            app:layout_constraintBottom_toBottomOf="@id/progressbar"
            app:layout_constraintRight_toRightOf="@id/progressbar"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:id="@+id/closeicon"
            android:src="@drawable/ic_baseline_close_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </ImageView>
        <TextView
            android:visibility="visible"
            android:layout_marginRight="10dp"
            app:layout_constraintTop_toTopOf="@id/icon"
            app:layout_constraintLeft_toRightOf="@id/icon"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/icon"
            android:text="Download"
            android:textColor="#000"
            android:layout_marginLeft="5dp"
            android:id="@+id/textlabel"
            android:textStyle="bold"
            android:textSize="14dp"
            android:textAllCaps="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>