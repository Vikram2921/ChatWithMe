<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:background="@drawable/round"
    android:layout_width="wrap_content"
    android:layout_height="50dp">
    <RelativeLayout
        android:background="@drawable/reply_background"
        android:layout_width="wrap_content"
        android:layout_height="60dp">
        <View
            android:id="@+id/bar"
            android:layout_margin="5dp"
            android:layout_width="5dp"
            android:layout_height="60dp">
        </View>
        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/preview"
            android:orientation="vertical"
            android:layout_toRightOf="@id/bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text=""
                android:textStyle="bold"
                android:singleLine="true"
                android:textSize="12dp"
                android:id="@+id/sendername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
            <TextView
                android:layout_marginTop="5dp"
                android:text=""
                android:drawableTint="#818181"
                android:drawablePadding="5dp"
                android:textSize="10dp"
                android:maxLines="2"
                android:id="@+id/messageDB"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#818181"></TextView>
        </LinearLayout>
        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_centerVertical="true"
            android:id="@+id/preview"
            android:scaleType="centerCrop"
            app:riv_corner_radius_top_right="5dp"
            app:riv_corner_radius_bottom_right="5dp"
            android:layout_margin="1dp"
            android:layout_alignParentRight="true"
            android:layout_width="60dp"
            android:layout_height="60dp">
        </com.makeramen.roundedimageview.RoundedImageView>
    </RelativeLayout>
</RelativeLayout>
